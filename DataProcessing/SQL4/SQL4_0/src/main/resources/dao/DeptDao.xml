<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gx.dao.IDeptDao">

    <select id="findAll" resultType="dept">
        select * from dept
    </select>

<!--    延迟加载,一对多-->
    <resultMap id="find2Map" type="dept">
        <id column="deptno" property="deptno" />
        <result column="dname" property="dname" />
        <result column="loc" property="loc" />
        <collection property="emps" ofType="emp" select="gx.dao.IDeptDao.find2" column="id"></collection>
    </resultMap>
    <select id="find2" resultMap="find2Map">
        select * from dept
    </select>
</mapper>